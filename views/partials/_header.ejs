<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="display:flex;justify-content:space-between">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user !== undefined) { %>
        <div style="width:300px;display:flex">
          <div style="color: white;padding:20px"> Logged in as: <%= user.email %> </div>
          <form method="POST" action="/logout">
            <button type="submit" class="btn btn-primary" style="margin:10px">Logout</button>
          </form>
        </div>
      <% } else { %>
        <form method="POST" action="/login">
          <input type="text" placeholder="Username" name="username"/>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>
